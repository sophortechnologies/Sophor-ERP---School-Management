generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ============================================
// PHASE 1: AUTHENTICATION & AUTHORIZATION
// ============================================

model User {
  id           Int       @id @default(autoincrement())
  username     String    @unique
  email        String    @unique
  passwordHash String
  firstName    String
  lastName     String
  phone        String?
  avatar       String?
  roleId       Int
  isActive     Boolean   @default(true)
  lastLogin    DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  role      Role          @relation(fields: [roleId], references: [id])
  sessions  UserSession[]
  auditLogs AuditLog[]
  
  // Phase 2 Relations
  classesAsTeacher  Class[]        @relation("ClassTeacher")
  subjectsTeaching  ClassSubject[] @relation("SubjectTeacher")
  markedAttendance  Attendance[]   @relation("MarkedAttendance")
  enteredResults    ExamResult[]   @relation("EnteredResults")
  verifiedResults   ExamResult[]   @relation("VerifiedResults")
  student           Student?

  // New Relations for Additional Modules
  employees        Employee[]
  payrolls         Payroll[]
  leaveRequests    Leave[]
  approvedLeaves   Leave[]        @relation("ApprovedLeaves")
  feeTransactions  FeeTransaction[]
  libraryMembers   LibraryMember[]
  sentMessages     Message[]      @relation("SentMessages")
  receivedMessages Message[]      @relation("ReceivedMessages")
  announcements    Announcement[]
  assetAssignments AssetAssignment[]

  @@map("users")
}

model Role {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  permissions Json
  isSystem    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users             User[]
  modulePermissions ModulePermission[]

  @@map("roles")
}

model UserSession {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String   @db.VarChar(500)
  expiresAt DateTime
  isActive  Boolean  @default(true)
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_sessions")
}

model AuditLog {
  id         Int      @id @default(autoincrement())
  userId     Int
  action     String
  resource   String
  resourceId Int?
  details    Json?
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@map("audit_logs")
}

model Module {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  path        String
  icon        String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  isSystem    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  permissions ModulePermission[]

  @@map("modules")
}

model ModulePermission {
  id        Int     @id @default(autoincrement())
  moduleId  Int
  roleId    Int
  canView   Boolean @default(false)
  canCreate Boolean @default(false)
  canEdit   Boolean @default(false)
  canDelete Boolean @default(false)

  module Module @relation(fields: [moduleId], references: [id])
  role   Role   @relation(fields: [roleId], references: [id])

  @@unique([moduleId, roleId])
  @@map("module_permissions")
}

// ============================================
// PHASE 2: ACADEMIC CORE MODULES
// ============================================

// ------------------------------------
// STUDENT ADMISSION & REGISTRATION
// ------------------------------------

model AcademicSession {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  startDate   DateTime
  endDate     DateTime
  isActive    Boolean  @default(true)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  students Student[]
  classes  Class[]

  @@map("academic_sessions")
}

model Class {
  id              Int      @id @default(autoincrement())
  name            String
  grade           Int
  section         String
  academicYear    String
  sessionId       Int
  capacity        Int      @default(40)
  currentStrength Int      @default(0)
  classTeacherId  Int?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  session      AcademicSession @relation(fields: [sessionId], references: [id])
  classTeacher User?           @relation("ClassTeacher", fields: [classTeacherId], references: [id])
  students     Student[]
  attendances  Attendance[]
  exams        Exam[]
  subjects     ClassSubject[]
  timetables   Timetable[]

  @@unique([grade, section, academicYear])
  @@map("classes")
}

model Student {
  id                  Int      @id @default(autoincrement())
  studentId           String   @unique
  userId              Int      @unique
  admissionNumber     String   @unique
  admissionDate       DateTime @default(now())
  classId             Int
  sessionId           Int
  rollNumber          String?

  // Personal Information
  firstName           String
  lastName            String
  dateOfBirth         DateTime
  gender              String
  bloodGroup          String?
  nationality         String   @default("Ethiopian")
  religion            String?
  category            String?

  // Contact Information
  email    String?
  phone    String?
  address  String?
  city     String?
  state    String?
  pincode  String?

  // Guardian Information
  guardianName       String
  guardianRelation   String
  guardianPhone      String
  guardianEmail      String?
  guardianOccupation String?
  guardianIncome     Decimal? @db.Decimal(10, 2)

  // Previous Education
  previousSchool     String?
  previousClass      String?
  previousPercentage Decimal? @db.Decimal(5, 2)
  tcNumber           String?
  tcDate             DateTime?

  // Health Information
  medicalConditions String?
  allergies         String?
  emergencyContact  String?

  // Documents
  photoUrl            String?
  birthCertificateUrl String?
  tcUrl               String?
  aadharUrl           String?

  // Status
  status   String  @default("Active")
  isActive Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user        User            @relation(fields: [userId], references: [id])
  class       Class           @relation(fields: [classId], references: [id])
  session     AcademicSession @relation(fields: [sessionId], references: [id])
  attendances Attendance[]
  examResults ExamResult[]
  feePayments FeeTransaction[]
  libraryMember LibraryMember?

  @@map("students")
}

// ------------------------------------
// ATTENDANCE MANAGEMENT
// ------------------------------------

model Attendance {
  id        Int      @id @default(autoincrement())
  studentId Int
  classId   Int
  date      DateTime @db.Date
  status    String
  period    Int?
  markedBy  Int
  remarks   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student      Student @relation(fields: [studentId], references: [id])
  class        Class   @relation(fields: [classId], references: [id])
  markedByUser User    @relation("MarkedAttendance", fields: [markedBy], references: [id])

  @@unique([studentId, date, period])
  @@index([classId, date])
  @@index([studentId, date])
  @@map("attendances")
}

model Holiday {
  id          Int      @id @default(autoincrement())
  name        String
  date        DateTime @db.Date
  type        String
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([date])
  @@map("holidays")
}

// ------------------------------------
// GRADE & EXAMINATION MANAGEMENT
// ------------------------------------

model Subject {
  id          Int      @id @default(autoincrement())
  code        String   @unique
  name        String
  description String?
  type        String
  maxMarks    Int      @default(100)
  passMarks   Int      @default(35)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  classSubjects ClassSubject[]
  examSubjects  ExamSubject[]
  timetables    Timetable[]

  @@map("subjects")
}

model ClassSubject {
  id        Int      @id @default(autoincrement())
  classId   Int
  subjectId Int
  teacherId Int?
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  class   Class   @relation(fields: [classId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])
  teacher User?   @relation("SubjectTeacher", fields: [teacherId], references: [id])

  @@unique([classId, subjectId])
  @@map("class_subjects")
}

model ExamType {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  weightage   Decimal  @db.Decimal(5, 2)
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  exams Exam[]

  @@map("exam_types")
}

model Exam {
  id           Int      @id @default(autoincrement())
  name         String
  examTypeId   Int
  classId      Int
  academicYear String
  term         String
  startDate    DateTime
  endDate      DateTime
  description  String?
  isPublished  Boolean  @default(false)
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  examType     ExamType      @relation(fields: [examTypeId], references: [id])
  class        Class         @relation(fields: [classId], references: [id])
  examSubjects ExamSubject[]
  examResults  ExamResult[]

  @@index([classId, academicYear, term])
  @@map("exams")
}

model ExamSubject {
  id             Int      @id @default(autoincrement())
  examId         Int
  subjectId      Int
  examDate       DateTime
  startTime      String
  endTime        String
  duration       Int
  maxMarks       Int
  minMarks       Int
  isTheory       Boolean  @default(true)
  isPractical    Boolean  @default(false)
  practicalMarks Int?
  theoryMarks    Int?
  roomNumber     String?
  instructions   String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  exam    Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  subject Subject @relation(fields: [subjectId], references: [id])

  @@unique([examId, subjectId])
  @@map("exam_subjects")
}

model ExamResult {
  id             Int      @id @default(autoincrement())
  examId         Int
  studentId      Int
  subjectId      Int
  theoryMarks    Decimal? @db.Decimal(5, 2)
  practicalMarks Decimal? @db.Decimal(5, 2)
  totalMarks     Decimal  @db.Decimal(5, 2)
  maxMarks       Int
  percentage     Decimal  @db.Decimal(5, 2)
  grade          String
  remarks        String?
  isAbsent       Boolean  @default(false)
  enteredBy      Int
  verifiedBy     Int?
  isVerified     Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  exam           Exam    @relation(fields: [examId], references: [id], onDelete: Cascade)
  student        Student @relation(fields: [studentId], references: [id])
  enteredByUser  User    @relation("EnteredResults", fields: [enteredBy], references: [id])
  verifiedByUser User?   @relation("VerifiedResults", fields: [verifiedBy], references: [id])

  @@unique([examId, studentId, subjectId])
  @@index([studentId, examId])
  @@map("exam_results")
}

model GradeScale {
  id          Int      @id @default(autoincrement())
  grade       String   @unique
  minPercent  Decimal  @db.Decimal(5, 2)
  maxPercent  Decimal  @db.Decimal(5, 2)
  gradePoint  Decimal  @db.Decimal(3, 2)
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("grade_scales")
}

// ============================================
// PHASE 3: ADMINISTRATIVE & OPERATIONAL CORE
// ============================================

// ------------------------------------
// HR & PAYROLL MANAGEMENT
// ------------------------------------

model Employee {
  id              Int       @id @default(autoincrement())
  employeeId      String    @unique
  userId          Int       @unique
  designation     String
  department      String
  employeeType    String
  joiningDate     DateTime
  salary          Decimal   @db.Decimal(10, 2)
  bankAccount     String?
  ifscCode        String?
  panNumber       String?
  aadharNumber    String?
  qualifications String?
  experience      String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user        User    @relation(fields: [userId], references: [id])
  payrolls    Payroll[]
  leaveRequests Leave[]

  @@map("employees")
}

model Payroll {
  id              Int      @id @default(autoincrement())
  employeeId      Int
  month           Int
  year            Int
  basicSalary     Decimal  @db.Decimal(10, 2)
  allowances      Decimal  @db.Decimal(10, 2)
  deductions      Decimal  @db.Decimal(10, 2)
  netSalary       Decimal  @db.Decimal(10, 2)
  workingDays     Int
  presentDays     Int
  paidDays        Int
  status          String   @default("Pending")
  processedBy     Int
  processedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  employee    Employee @relation(fields: [employeeId], references: [id])
  processedByUser User  @relation(fields: [processedBy], references: [id])

  @@unique([employeeId, month, year])
  @@map("payrolls")
}

model Leave {
  id           Int      @id @default(autoincrement())
  employeeId   Int
  leaveType    String
  startDate    DateTime
  endDate      DateTime
  totalDays    Int
  reason       String
  status       String   @default("Pending")
  approvedBy   Int?
  approvedAt   DateTime?
  remarks      String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  employee    Employee @relation(fields: [employeeId], references: [id])
  approvedByUser User? @relation("ApprovedLeaves", fields: [approvedBy], references: [id])

  @@map("leaves")
}

// ------------------------------------
// FEE COLLECTION & ACCOUNTING
// ------------------------------------

model FeeCategory {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  amount      Decimal  @db.Decimal(10, 2)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  feeStructures FeeStructure[]

  @@map("fee_categories")
}

model FeeStructure {
  id            Int      @id @default(autoincrement())
  classId       Int
  feeCategoryId Int
  academicYear  String
  term          String
  amount        Decimal  @db.Decimal(10, 2)
  dueDate       DateTime
  lateFee       Decimal? @db.Decimal(10, 2)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  class       Class       @relation(fields: [classId], references: [id])
  feeCategory FeeCategory @relation(fields: [feeCategoryId], references: [id])
  transactions FeeTransaction[]

  @@unique([classId, feeCategoryId, academicYear, term])
  @@map("fee_structures")
}

model FeeTransaction {
  id               Int      @id @default(autoincrement())
  studentId        Int
  feeStructureId   Int
  transactionId    String   @unique
  amount           Decimal  @db.Decimal(10, 2)
  paymentDate      DateTime
  paymentMode      String
  referenceNumber  String?
  status           String   @default("Paid")
  collectedBy      Int
  remarks          String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  student      Student      @relation(fields: [studentId], references: [id])
  feeStructure FeeStructure @relation(fields: [feeStructureId], references: [id])
  collectedByUser User      @relation(fields: [collectedBy], references: [id])
  ledgerEntry  AccountLedger?

  @@map("fee_transactions")
}

model AccountLedger {
  id              Int      @id @default(autoincrement())
  transactionId   Int?     @unique
  transactionType String
  amount          Decimal  @db.Decimal(10, 2)
  debitCredit     String
  balance         Decimal  @db.Decimal(10, 2)
  description     String
  reference       String?
  date            DateTime
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  feeTransaction FeeTransaction? @relation(fields: [transactionId], references: [id])

  @@map("account_ledgers")
}

// ------------------------------------
// LIBRARY MANAGEMENT
// ------------------------------------

model Book {
  id          Int      @id @default(autoincrement())
  isbn        String?  @unique
  title       String
  author      String
  publisher   String?
  edition     String?
  category    String
  price       Decimal? @db.Decimal(10, 2)
  totalCopies Int
  available   Int
  location    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transactions BookTransaction[]

  @@map("books")
}

model LibraryMember {
  id        Int      @id @default(autoincrement())
  studentId Int?     @unique
  userId    Int?     @unique
  memberId  String   @unique
  joinedAt  DateTime @default(now())
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  student     Student?         @relation(fields: [studentId], references: [id])
  user        User?            @relation(fields: [userId], references: [id])
  transactions BookTransaction[]

  @@map("library_members")
}

model BookTransaction {
  id          Int       @id @default(autoincrement())
  bookId      Int
  memberId    Int
  issueDate   DateTime
  dueDate     DateTime
  returnDate  DateTime?
  fineAmount  Decimal?  @db.Decimal(10, 2)
  status      String    @default("Issued")
  remarks     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  book   Book          @relation(fields: [bookId], references: [id])
  member LibraryMember @relation(fields: [memberId], references: [id])

  @@map("book_transactions")
}

// ============================================
// PHASE 4: COLLABORATION & INFRASTRUCTURE
// ============================================

// ------------------------------------
// TIMETABLE & SCHEDULING
// ------------------------------------

model Timetable {
  id        Int      @id @default(autoincrement())
  classId   Int
  subjectId Int
  teacherId Int?
  dayOfWeek Int
  period    Int
  startTime String
  endTime   String
  room      String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  class   Class   @relation(fields: [classId], references: [id])
  subject Subject @relation(fields: [subjectId], references: [id])
  teacher User?   @relation(fields: [teacherId], references: [id])

  @@unique([classId, dayOfWeek, period])
  @@map("timetables")
}

// ------------------------------------
// COMMUNICATION PORTAL
// ------------------------------------

model Message {
  id           Int       @id @default(autoincrement())
  senderId     Int
  receiverId   Int
  subject      String?
  content      String    @db.Text
  messageType  String
  isRead       Boolean   @default(false)
  priority     String    @default("Normal")
  parentId     Int?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  sender       User    @relation("SentMessages", fields: [senderId], references: [id])
  receiver     User    @relation("ReceivedMessages", fields: [receiverId], references: [id])
  parent       Message? @relation("MessageReplies", fields: [parentId], references: [id])
  replies      Message[] @relation("MessageReplies")

  @@map("messages")
}

model Announcement {
  id          Int       @id @default(autoincrement())
  title       String
  content     String    @db.Text
  authorId    Int
  targetType  String
  targetIds   Json?
  isActive    Boolean   @default(true)
  startDate   DateTime
  endDate     DateTime?
  priority    String    @default("Normal")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  author User @relation(fields: [authorId], references: [id])

  @@map("announcements")
}

// ------------------------------------
// INVENTORY & ASSET MANAGEMENT
// ------------------------------------

model AssetCategory {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  assets Asset[]

  @@map("asset_categories")
}

model Asset {
  id              Int       @id @default(autoincrement())
  assetId         String    @unique
  name            String
  categoryId      Int
  description     String?
  purchaseDate    DateTime
  purchasePrice   Decimal   @db.Decimal(10, 2)
  currentValue    Decimal   @db.Decimal(10, 2)
  depreciationRate Decimal? @db.Decimal(5, 2)
  location        String?
  status          String    @default("Available")
  warrantyPeriod  Int?
  supplier        String?
  isActive        Boolean   @default(true)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  category    AssetCategory   @relation(fields: [categoryId], references: [id])
  assignments AssetAssignment[]

  @@map("assets")
}

model AssetAssignment {
  id          Int       @id @default(autoincrement())
  assetId     Int
  assignedTo  Int
  assignedBy  Int
  assignedAt  DateTime
  returnDate  DateTime?
  returnedAt  DateTime?
  condition   String?
  remarks     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  asset      Asset @relation(fields: [assetId], references: [id])
  assignedToUser User @relation(fields: [assignedTo], references: [id])
  assignedByUser User @relation(fields: [assignedBy], references: [id])

  @@map("asset_assignments")
}

// ============================================
// PHASE 5: REPORTS & ANALYTICS
// ============================================

model Report {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  reportType  String
  parameters  Json?
  generatedBy Int
  filePath    String?
  status      String    @default("Pending")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  generatedByUser User @relation(fields: [generatedBy], references: [id])

  @@map("reports")
}

model Dashboard {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  layout      Json
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("dashboards")
}